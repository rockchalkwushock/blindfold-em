{
  "name": "blindfold-em",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Blindfold'em is a productivity management web-application.",
  "author":
    "Cody Brunner <rockchalkwushock@icloud.com> (https://rcws-development.com)",
  "repository": "https://github.com/rockchalkwushock/blindfold-em.git",
  "homepage":
    "https://github.com/rockchalkwushock/mashaeltsova-photography#readme",
  "bugs": "https://github.com/rockchalkwushock/mashaeltsova-photography/issues",
  "scripts": {
    "build": "next build",
    "cm": "nps commit",
    "dev": "next",
    "now-start": "next start",
    "prettier": "prettier --single-quote --no-semi --write",
    "start": "nps",
    "test": "nps test"
  },
  "dependencies": {
    "moment": "^2.19.2",
    "next": "^4.1.4",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1"
  },
  "devDependencies": {
    "codecov": "^3.7.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.11.0",
    "eslint-config-equimper": "^2.2.1",
    "eslint-config-prettier": "^2.7.0",
    "husky": "^0.15.0-beta.13",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nps": "^5.7.1",
    "nps-utils": "^1.5.0",
    "prettier": "^1.8.2",
    "react-test-renderer": "^16.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && nps validate.withCoverage"
    }
  },
  "jest": {
    "bail": true,
    "collectCoverageFrom": [
      "components/**/*.js",
      "containers/*.js",
      "lib/*.js",
      "pages/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "setupFiles": ["./jest.setup.js"],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.js": ["yarn prettier", "git add"]
  },
  "now": {
    "alias": ["blindfold-em-beta", "blindfold-em"],
    "env": {
      "NODE_ENV": "production"
    },
    "files": [
      "./components",
      "./containers",
      "./lib",
      "./pages",
      "./static",
      "package.json",
      "yarn.lock"
    ],
    "name": "blindfold-em"
  }
}
